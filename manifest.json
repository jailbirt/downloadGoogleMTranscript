{
  "manifest_version": 2,
  "name": "Google Meet Captions Capture",
  "version": "1.0",
  "description": "Capture Google Meet captions and save them to a file.",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}

